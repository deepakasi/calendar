<div class="jumbotron">
	<div class="container">
		<% if current_user %>
		<div class="page-header"><h1> welcome back! </h1></div>
		<h2>Some info about you</h1>
		<div class="well well-lg">
			<ul>
				<li>Login count: <%= current_user.login_count %></li>
				<li>Failed login count: <%= current_user.failed_count %></li>
      		</ul>
      	</div>
      	<% else %>
		<p>
			<h1>Welcome!</h1>
			<p>Sign up to get started</p>	
			<%= link_to new_user_path, class: "btn btn-primary btn-lg" do %>
			Sign Up &raquo;
			<% end %></p>
		<% end %>
		</div>
	</div>








<div class="page-header"><h1>Todo</h1></div>

<%= form_for @user do |f| %>
  <%= render 'shared/errors', object: @user %>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %>
  </div>


  <%= f.submit 'save', class: 'btn btn-primary btn-lg' %>
<% end %>
<p><%= link_to new_user_path, class: "btn btn-primary btn-lg" do %>
      Sign Up &raquo;
      <% end %>
    </p>
